<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Scholar.Views.Admin.AddState"
             Title="Add State"
             >
    <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Always" BackgroundColor="Snow">
        <VerticalStackLayout Margin="40" Spacing="10" WidthRequest="250" HorizontalOptions="CenterAndExpand">
            <Label 
            Text="Add State" FontSize="22" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
                TextDecorations="None"
                />

            <Label Text="State" FontSize="14" Margin="5"/>
            <Entry Placeholder="State" FontSize="14" x:Name="state" />
            <Button
                Text="Save"  BackgroundColor="CadetBlue" TextColor="White"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>